=build_form_toolbar(new_conselho_regional_path,nil, @conselho_regional, conselho_regionais_path, nil)
%div{class: "container"}
  %div{class: "row"}
    %h1=t('labels.Conselho Regional')
    %hr{style: "border: #323232 solid 0.5px;"}
      =form_tag conselho_regionais_path, :method => 'get' do
        %row
          %div{class: "col-lg-2"}
            %label
              Status
            = select(:status, :status, [['Ativo',true],['Inativo',false]], {:include_blank => ''}, :class => "form-control")
          %div{class: "col-lg-2"}
            %label
              ID
            = select(:id, :id, ConselhoRegional.all.collect {|p| [p.id, p.id] }, {:include_blank => ''}, :class => "form-control") 
          %div{class: "col-lg-2"}
            %label
              Sigla
            = select(:sigla, :sigla, ConselhoRegional.all.collect {|p| [p.sigla, p.sigla] }, {:include_blank => ''}, :class => "form-control") 
          %div{class: "col-lg-3"}
            %label
              Pesquisar
            = text_field_tag :search, '', placeholder: "Pesquisar conselho regional por sigla", class: "form-control"
          %br
          = submit_tag "Pesquisar", :name => nil, class: "btn btn-default"
          %br
          %br
    %table{class: "table table-striped table-bordered", cellspacing: "0", width: "100%"}
      %thead
        %th=t('labels.status')
        %th=t('labels.código')
        %th=t('labels.sigla')
        %th=t('labels.descrição')
        %th=t('bootstrap.helpers.actions')
      %tbody
        - @conselho_regionais.each do |conselho_regional|
          %tr
            %td= status(conselho_regional.status)
            %td= conselho_regional.id
            %td= conselho_regional.sigla
            %td= conselho_regional.descricao
            %td
              .btn-group.pull-right
                -if can? :read, ConselhoRegional
                  =link_to "#{image_tag("icons/glyphicons-30-notes-2.png", width: 22, height: 22)}".html_safe, conselho_regional, title: "Visualizar", class: 'btn btn-default'
  %div{class: "row"}
    %hr{style: "border: #323232 solid 0.5px;"}
