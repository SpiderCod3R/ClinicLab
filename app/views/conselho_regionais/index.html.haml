=build_form_toolbar(new_empresa_conselho_regional_path(current_user.empresa),nil, @conselho_regional, empresa_conselho_regionais_path(current_user.empresa), nil)
%div{class: "container"}
  %div{class: "row"}
    %h1=t('labels.Conselho Regional')
    %hr{style: "border: #323232 solid 0.5px;"}
    .well=render 'conselho_regionais/assets/filtro'
    %br
    %br
  %div{class: "row"}
    %table{class: "table table-striped table-bordered", cellspacing: "0", width: "100%"}
      %thead
        %th=t('labels.status')
        %th=t('labels.código')
        %th=t('labels.sigla')
        %th=t('labels.descrição')
        %th=t('bootstrap.helpers.actions')
      %tbody
        - @conselho_regionais.each do |conselho_regional|
          %tr
            %td= status(conselho_regional.status)
            %td= conselho_regional.id
            %td= conselho_regional.sigla
            %td= conselho_regional.descricao
            %td
              .btn-group.pull-right
                -if can? :read, ConselhoRegional
                  =link_to "#{image_tag("icons/glyphicons-30-notes-2.png", width: 22, height: 22)}".html_safe, empresa_conselho_regional_path(current_user.empresa, conselho_regional), title: "Visualizar", class: 'btn btn-default'
  %div{class: "row", style: "margin: 0;"}
    %div{class: "pull-right"}
      =paginate @conselho_regionais
  %div{class: "row"}
    %hr{style: "border: #323232 solid 0.5px;"}
