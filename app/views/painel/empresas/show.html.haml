.container
  .row
    .col-md-8
      .page-header
        %h1
          =@empresa.nome
          %small.pull-right
            - if @empresa.status
              %i.fa.fa-2x.fa-check-square{style:"color: #007B02"}
      .pull-left
        %span.glyphicon.glyphicon-time
          %b="Criada há: " + time_ago_in_words(@empresa.created_at)
      %br
      %br
      .well
        %b Administradores
        %hr
        .row-fluid
          %asside
            %table.table.table-striped
              %thead
                %th Nome
                %th Nome de usuário
                %th Criado há
                %th Opções
              %tbody#empresa_administradores_content
                =render @administradores
            %center
              #administrador_paginator
                =paginate @administradores, param_name: "administradores_pagina", :theme => 'twitter-bootstrap-3',:pagination_class => "pagination-small pagination-centered"
              #administrador_page_entries
                =page_entries_info @administradores
