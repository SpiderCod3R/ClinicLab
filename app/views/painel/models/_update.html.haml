  = simple_form_for(model, url: painel_models_path, method: "PUT", remote: true) do |f|
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{:"aria-label"=>"Close", :"data-dismiss"=>"modal", type: "button"}
            %span{:"aria-hidden"=>"true"} Ã—
          %h4#myModalLabel.modal-title Modelo
        .container
          .row
            #edit_permissao_error_messages
        .modal-body
          .field
            = f.input :name, required: true
          .field
            = f.input :model_class, required: true
        .modal-footer
          =f.button :submit, "Editar", class: 'btn btn-success'
