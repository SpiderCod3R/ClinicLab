=build_toolbar
.container
  .row-fluid
    %h4
      %span.text-info
        %i.fa.fa-question-circle-o
        =link_to "Precisa de Ajuda", "#"
    %br/
  .row
    .col-md-3
      =render "/pages/fast_access"
    .col-xs-12.col-md-8
      .container-fluid
        .row
          %h1=t('painel.helpers.models.usuario')
          %br/
          =link_to t('painel.helpers.actions.new', name: "Usuário"), new_painel_empresa_conta_path(current_usuario.empresa)
        .row
          .table-responsive
            %table.table.table-striped.table-hover.table-condensed
              %thead
                %th
                  %h5 ID
                %th
                  %h5 Nome
                %th
                  %h5 login
                %th 
                  %h5 Data de Criação
                %th 
                  %h5 Administrador
              %tbody#empresa_content
                - @empresa_usuarios.each do |usuario|
                  %tr{id: "empresa_usuario_#{usuario.id}"}
                    %td=usuario.id
                    %td=usuario.nome
                    %td=usuario.login
                    %td
                      %em=time_ago_in_words(usuario.created_at)
                    %td
                      -if usuario.admin?
                        %i.fa.fa-2x.fa-check-circle-o.text-center{style: "color: #8CCC00"}
                      -else

                    %td
                      .col-md-3
                        
                      .col-md-3
            #paginator
              =paginate @empresa_usuarios