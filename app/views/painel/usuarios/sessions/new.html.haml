.wrapper_with_padding
  .col-md-5
    #sessions_left_side_content
      .panel
        %h2.text-center Log in
        %hr
        .container
          =simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f|
            .container
              .row
                .col-md-4
                  = f.input :login, required: false, autofocus: true
              .row
                .col-md-4
                  = f.input :password, required: false
              .row
                .col-md-4
                  .session-btn-actions
                    = f.button :submit, "Log in", class: "btn btn-success"
  .col-md-7
    #sessions_right_side_content
