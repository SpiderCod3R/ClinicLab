/ Modal usuario update password
=content_tag(:div, id: "edit_usuario_#{usuario.id}", class: "modal fade", :"aria-hidden"=> "true", :"aria-labelledby"=>"myModalLabel", role: "dialog", tabindex: "-1", :"data-backdrop"=>"static") do
  = simple_form_for([usuario.empresa, usuario], method: "PUT", remote: true) do |f|
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{ :"aria-label"=>"Close", :"data-dismiss"=>"modal", type:"button"}
            %span{ :"aria-hidden"=>"true" } Ã—
          %h4#myModalLabel.modal-title Alterar Dados
          %em
            %b{style: "text-decoration: underline"}=usuario.nome
        .modal-body
          .field
            = f.input :nome, required: true
          .field
            = f.input :login, required: true
          .field
            = f.input :email, required: true
        .modal-footer
          =f.button :submit, "Editar", class: 'btn btn-success'
