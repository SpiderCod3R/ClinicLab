.container-fluid
  / Nav tabs
  %ul.nav.nav-tabs{:role => "tablist"}
    -if can? :read, Agenda
      %li.active{:role => "presentation"}
        %a{"aria-controls" => "agendas", "data-toggle" => "tab", :href => "#agendas", :role => "tab"} Agendas
    -if can? :create, Agenda
      %li{:role => "presentation"}
        %a{"aria-controls" => "gerar_agenda", "data-toggle" => "tab", :href => "#gerar_agenda", :role => "tab"} Gerar Agenda
  / Tab panes
  .tab-content
    -if can? :read, Agenda
      #agendas.tab-pane.active{:role => "tabpanel"}
        .panel
          =render 'result'
    -if can? :create, Agenda
      #gerar_agenda.tab-pane.active{:role => "tabpanel"}
        .panel
          .container-fluid
            =render 'form'
