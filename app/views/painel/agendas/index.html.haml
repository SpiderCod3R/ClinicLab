=build_form_toolbar(new_painel_empresa_agenda_path(empresa_atual), nil, @agenda, painel_empresa_agendas_path(empresa_atual), nil)
%div{class: "container-fluid"}
  %div{class: "row-fluid"}
    %h1  Agendas
    %hr{style: "border: #323232 solid 0.5px;"}
    .panel.panel-default
      .panel-heading Hor√°rios
      .panel-body
        %table{class: "table table-striped table-bordered", cellspacing: "0", width: "100%"}
          %thead
            %th Profissional
            %th Data
            %th Dia
            %th Inicio
            %th Fim
          %tbody
            - @agendas.order("data_inicial ASC").each do |agenda|
              -agenda.agenda_manha_horarios.each do |agenda_manha|
                %tr
                  %td{width: "30%", style: "text-align: left; font-weight: bold"}=agenda.profissional_nome
                  %td{width: "10%", style: "text-align: center;"}=agenda.data_inicial.strftime("%d/%m/%Y")
                  %td{width: "10%", style: "text-align: center;"}=agenda_manha.dia
                  %td{width: "10%", style: "text-align: center;"}=Time.parse(agenda_manha.inicio_do_atendimento).strftime("%H:%M")
                  %td{width: "10%", style: "text-align: center;"}=Time.parse(agenda_manha.final_do_atendimento).strftime("%H:%M")
    %hr{style: "border: #323232 solid 0.5px;"}
