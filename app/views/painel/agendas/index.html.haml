=build_form_toolbar(new_painel_empresa_agenda_path(empresa_atual), nil, @agenda, painel_empresa_agendas_path(empresa_atual), nil)
%div{class: "container-fluid"}
  %div{class: "row-fluid"}
    %h1  Agendas
    %hr{style: "border: #323232 solid 0.5px;"}
    .panel.panel-default
      .panel-heading Hor√°rios
      .panel-body
        %table{class: "table table-striped table-bordered", cellspacing: "0", width: "100%"}
          %thead
            %th Profissional
            %th Data
            %th Dia
            %th Inicio
            %th Fim
          %tbody
            - @agendas.order("data ASC").order("atendimento_inicio ASC").each do |agenda|
              %tr
                %td{width: "30%", style: "text-align: left; font-weight: bold"}=agenda.profissional_nome
                %td{width: "10%", style: "text-align: center;"}=agenda.data.strftime("%d/%m/%Y")
                %td{width: "10%", style: "text-align: center;"}=agenda.data.strftime("%A")
                %td{width: "10%", style: "text-align: center;"}=Time.parse(agenda.atendimento_inicio).strftime("%H:%M")
                %td{width: "10%", style: "text-align: center;"}=Time.parse(agenda.atendimento_final).strftime("%H:%M")
    %hr{style: "border: #323232 solid 0.5px;"}
