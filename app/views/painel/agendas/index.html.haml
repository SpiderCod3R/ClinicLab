=build_form_toolbar(new_painel_empresa_agenda_path(empresa_atual), nil, @agenda, painel_empresa_agendas_path(empresa_atual), nil)
%div{class: "container-fluid"}
  %div{class: "row-fluid"}
    %h1  Agendas
    %hr{style: "border: #323232 solid 0.5px;"}
    .panel.panel-default
      .panel-heading Hor√°rios
      .panel-body
        %table{class: "table table-striped table-bordered table-hover", cellspacing: "0", width: "100%"}
          %thead
            %th Profissional
            %th Data
            %th Dia
            %th Inicio
            %th Fim
          %tbody
            - @agendas.order("data ASC").order("atendimento_inicio ASC").each do |agenda|
              -if agenda.status.eql?("VAGO")
                %tr.success
                  =render 'data_agenda', { agenda: agenda }
              -elsif agenda.status.eql?("AGENDADO")
                %tr.danger
                  =render 'data_agenda', { agenda: agenda }

    %hr{style: "border: #323232 solid 0.5px;"}
    = paginate @agendas
