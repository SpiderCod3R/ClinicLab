.row-fluid
  .panel.panel-default
    .panel-heading 
    .panel-body
      %table.table.table-striped.table-bordered.table-hover{ cellspacing: "0", width: "100%"}
        %thead
          %th=sort_link @search, :name, "Profissional"
          %th=sort_link @search, :name, "Dia"
          %th=sort_link @search, :name, "Data"
          %th=sort_link @search, :name, "Horário"
          %th Paciente
          %th Atendente
          %th Chegada
          %th S.Espera
          %th Movimentações
        %tbody#agenda_content
          - @agendas.order("data ASC").order("atendimento_inicio ASC").each do |agenda|
            -if agenda.status.eql?(I18n.t("agendas.helpers.free"))
              =content_tag(:tr, id: "agenda_id_#{agenda.id}" , class: "info") do
                =render 'agenda_tr', { agenda: agenda }
            -elsif agenda.status.eql?(I18n.t("agendas.helpers.scheduled"))
              =content_tag(:tr, id: "agenda_id_#{agenda.id}" , class: "success") do
                =render 'agenda_tr', { agenda: agenda }

  %hr{style: "border: #323232 solid 0.5px;"}
  =paginate @agendas