<div class="col-md-4">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Ambiente</h4></div>
        <div class="panel-body">
          <p>
            <strong>Nome:</strong>
            <%= @environment.name %>
          </p>

          <p>
            <strong>Database name:</strong>
            <%= @environment.database_name %>
          </p>

          <p>
            <strong>Url:</strong>
            <%= @environment.empresa.slug %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Empresa</h4></div>
        <div class="panel-body">
          <p>
            <strong>Nome:</strong>
            <%= @empresa.nome %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h4>Admins</h4></div>
        <div class="panel-body">
          <%- @environment.users.where(admin: true).each do |admin| -%>
            <strong>Nome:</strong>
            <%= admin.name -%>
            <%- if !params[:admin_id].present? -%>
              <%= link_to edit_environment_admin_account_painel_environment_path(admin.environment, admin_id: admin), class: "pull-right" do%>
                <i class="fa fa-pencil-square-o"></i>
              <%- end -%>
            <%- end -%>
          <%- end -%>
        </div>
      </div>
    </div>
  </div>
</div>