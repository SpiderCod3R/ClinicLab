<div class="row">
  <div class="field col-md-4">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "nome de usuario", class: "form-control" %>
  </div>
</div>
<div class="row">
  <div class="field col-md-4">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "example@email.com", class: "form-control" %>
  </div>
</div>
<div class="row">
  <div class="field col-md-4">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
</div>
<div class="row">
  <div class="field col-md-4">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
</div>