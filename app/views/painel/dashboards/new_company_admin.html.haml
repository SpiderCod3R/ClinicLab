%main
  %br/
  = form_for([@empresa, @usuario], url: painel_empresa_create_admin_path, method: "POST", ) do |z|
    - if @usuario.errors.any?
      %ul#dash_messages
        - @usuario.errors.full_messages.each do |msg|
          %li= msg
    %fieldset
      %legend
        %em Dados do Administrador
      .container-fluid
        .row
          .col-md-6
            = z.label :nome, required: true
            = z.text_field :nome, required: true, class: "form-control"
          .col-md-6
            = z.label :login, required: true
            = z.text_field :login, required: true, class: "form-control"
        .row
          .col-md-2
            = z.label "CÃ³digo", required: true
            = z.text_field :codigo_pais, class: "form-control", value: "55"
          .col-md-4
            = z.label :telefone
            = z.text_field :telefone, class: "form-control"
          .col-md-6
            =z.label :email, required: true
            =z.email_field :email, placeholder: "example@email.com", class: "form-control", required: true
        .row
          .col-md-6
            =z.label :password
            =z.password_field :password, required: true, class: "form-control"
          .col-md-6
            =z.label :password_confirmation
            =z.password_field :password_confirmation, required: true, class: "form-control"
      %br
      .form-actions
        %hr{style: "border: #C5B1FF 1px dashed"}
        .pull-left
          = z.button "Salvar", class: "btn btn-primary"
        .pull-right
          = link_to t('painel.helpers.actions.back'), painel_empresa_path(@empresa), class: "btn btn-danger"
