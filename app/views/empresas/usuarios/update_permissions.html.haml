=build_form_toolbar(".edit_usuario", @usuario, empresa_path(@empresa), nil)
%div{class: "container"}
  %div{class: "row"}
    %div{class: "col-xs-12 col-sm-12 col-md-12 col-lg-12"}
      %h1="Permissões do Usuário #{@usuario.nome.upcase}"
    = simple_form_for [@empresa, @usuario] do |f|
      %div{class: "row"}
        %div{class: "col-xs-12 col-sm-6 col-md-6 col-lg-6", style: 'margin: 0; padding: 0;'}
          = f.error_notification
      %div{class: "row"}
        %div{class: "col-xs-12 col-sm-12 col-md-12 col-lg-12"}
          =f.input :id, as: :hidden
          - unless @usuario.usuario_permissao_empresas.empty?
            =render 'empresas/usuarios/partials/permissoes_modulo', {f: f}
