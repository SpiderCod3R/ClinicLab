=render 'application/navbar'
%div{class: "container"}
  %div{class: "row"}
    %div{class: "page-header"}
      %div{class: "bootstrap-table"}
        .fixed-table-toolbar
          .bars.pull-right
            .toolbar
              = link_to "#{image_tag("icons/glyphicons-191-circle-plus.png", width: 22, height: 22)} #{t(:new, scope: [:bootstrap, :helpers, :links])}".html_safe, new_empresa_path, class: 'btn btn-default'
      %h1 Empresas
      %hr
      %br
      %table{id: "data-table", class: "table table-striped table-bordered", cellspacing: "0", width:"100%"}
        %thead
          %tr
            %th= t(:name, scope: [:bootstrap, :helpers, :labels])
            %th= t(:actions, scope: [:bootstrap, :helpers])
        %tbody
          - @empresas.each do |empresa|
            %tr
              %td=empresa.nome.capitalize
              %td
                %div{class: "btn-group pull-right"}
                  = link_to "#{image_tag("icons/glyphicons-610-journal.png", width: 22, height: 22)}".html_safe, empresa_path(empresa), title: "Visualizar", class: 'btn btn-default'
