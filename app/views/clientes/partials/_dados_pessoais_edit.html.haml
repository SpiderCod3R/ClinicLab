- nascimento = date_to_format(@cliente.nascimento) if @cliente.nascimento.present?
- sexo  = @cliente.sexo if @cliente.sexo.present?
%div{id:"dados", class:"tab-pane fade in active"}
  %div{class: "row"}
    %div{class: "col-xs-12 col-sm-6 col-md-4 col-lg-3"}
      = f.input :id, as: :hidden
      = f.input :status, :as => :select,
              :collection => [['Ativo','Ativo'],['Inativo','Inativo']],
              :include_blank => false,
              :label => t('labels.status')
    %div{class: "col-xs-12 col-sm-6 col-md-4 col-lg-3"}
      = f.input :nome
    %div{class: "col-xs-12 col-sm-6 col-md-4 col-lg-3"}
      = f.input :sexo, :collection => [['Masculino','m'],['Feminino','f']], :label => t('labels.sexo'), :selected_value => sexo, :include_blank => "Selecione"
  %div{class: "row"}
    %div{class: "col-xs-12 col-sm-6 col-md-4 col-lg-3"}
      = f.input :nascimento, as: :string, input_html: {class: "datepicker_form", value: "#{nascimento}"}
    %div{class: "col-xs-12 col-sm-6 col-md-4 col-lg-3"}
      %label{class: "string required control-label"}
        Idade
      %input{:type=>"text", :class => "form-control", :id => "cliente_idade"}
    %div{class: "col-xs-12 col-sm-6 col-md-4 col-lg-3"}
      = f.input :estado_civil, :as => :select,
              :collection => [['Casado','casado'],['Divorciado','divorciado'],['Solteiro','solteiro']],
              :include_blank => "Selecione",
              :label => t('labels.estado civil')
  %div{class: "row"}
    %div{class: "col-xs-12 col-sm-6 col-md-4 col-lg-3"}
      = f.input :cpf,  input_html: {class: "cpf_maskara" }
    %div{class: "col-xs-12 col-sm-6 col-md-4 col-lg-3"}
      = f.input :rg,  input_html: {class: "rg_maskara" }
    %div{class: "col-xs-12 col-sm-6 col-md-4 col-lg-3"}
      =f.label "Nacionalidade"
      =f.localized_country_select(:nacionalidade, [], {include_blank: "Selecione"}, {:class => "form-control"})
  %div{class: "row"}
    %div{class: "col-xs-12 col-sm-6 col-md-4 col-lg-3", id: "naturalidade_cliente", style: "display: none;"}
      =f.label "Naturalidade"
      =f.collection_select(:naturalidade, @estados, :id, :nome, {include_blank: "Selecione"}, {:class=>'form-control'})