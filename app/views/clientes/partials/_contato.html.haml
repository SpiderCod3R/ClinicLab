#contato.tab-pane.fade
  .row
    =render 'clientes/partials/cliente_legend'
  .row
    .col-xs-12.col-sm-6.col-md-4.col-lg-6
      %label Foto
      %label{for: "cliente_foto", class: "custom-file-upload"}
        %i.fa.fa-cloud-upload Foto Upload
      = f.input :foto, as: :file, label: false
      #foto_contato_selected
  .row
    .col-xs-12.col-sm-6.col-md-4.col-lg-3
      = f.input :email
    .col-xs-12.col-sm-4.col-md-4.col-lg-3
      = f.input :telefone
  .row
    .col-xs-12.col-sm-6.col-md-4.col-lg-3
      = f.input :endereco
    .col-xs-12.col-sm-4.col-md-4.col-lg-3
      = f.input :complemento
  .row
    .col-xs-12.col-sm-6.col-md-4.col-lg-3
      = f.input :bairro
    .col-xs-12.col-sm-4.col-md-4.col-lg-3
      = f.input :cep, input_html: { class: "cep_mask" }
  .row
    .col-xs-12.col-sm-6.col-md-4.col-lg-3
      =f.label "Estado"
      =f.collection_select(:estado_id, Estado.pelo_nome, :id, :nome, {include_blank: "Selecione"}, {:class=>'form-control'})
    .col-xs-12.col-sm-4.col-md-4.col-lg-3
      =f.label "Cidade"
      = f.grouped_collection_select(:cidade_id, Estado.pelo_nome, :cidades, :nome, :id, :nome, {include_blank: "Selecione"}, { :class=> "collection_select form-control" })
  %br/
  .row
    .col-xs-12.col-sm-4.col-md-4.col-lg-3
