#pdf.tab-pane.fade
  #wrapper-pdf-tab
    .col-md-12
      %hr
        .col-md-4
          .panel.panel-default
            .panel-heading
              %b Envio de PDF's
            .panel-body
              =f.simple_fields_for @cliente_pdf_uploads do |u|
                .container
                  .row
                    =u.input :pdf, as: :file, label: "Documento"
                    =error_custom_tag(@cliente, :"cliente_pdf_uploads.pdf_file_name", "Documento")
                  .row
                    =u.input :anotacoes, as: :text, input_html: {style: "margin: 5px 0px 3px; height: 240px; width: 310px !important;"}
        -if !@cliente_pdfs.empty?
          .col-md-8
            %div{style: "margin-bottom: 10%; margin-left: -10px"}
              .row-fluid
                =render 'clientes/partials/search_pdf'
            %br/
            .clearfix
            .row-fluid
              %table{class: "table table_pdf_cliente table-striped table-bordered"}
                %thead
                  %th Anotações
                  %th Data
                  %th PDF
                  %th Excluir
                %tbody#table_pdf
                  =render 'clientes/partials/pdf_table', { cliente_pdfs: @cliente_pdfs }
              #paginator
                = paginate @cliente_pdfs, remote: true