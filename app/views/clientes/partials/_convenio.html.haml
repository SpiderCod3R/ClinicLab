%div{id:"convenio", class:"tab-pane fade"}
  - if @cliente.id?
    =render 'clientes/partials/cliente_legend'
    %hr
  %div{class: "row", style: "margin-bottom: 20px;"}
    %div{class: "col-xs-12 col-sm-10 col-md-6 col-lg-6"}
      %div{class: "row"}
        %div{class: "col-xs-12 col-sm-6 col-md-4 col-lg-4"}
          %label{class: "string control-label"}
            Status Convênio
          %br
          = collection_radio_buttons(:cliente_convenio, :status_convenio, [[true, 'Ativo'] ,[false, 'Inativo']], :first, :last, :class => "status_convenio_radio_buttons")
        %div{class: "col-xs-12 col-sm-6 col-md-4 col-lg-4"}
          %label{class: "string control-label"}
            Matrícula
          %input{:type=>"text", :class => "form-control", :id => "cliente_convenio_matricula"}
        %div{class: "col-xs-12 col-sm-6 col-md-4 col-lg-4"}
          %label{class: "string required control-label"}
            Convênio
          / = collection_select(:cliente_convenio, :convenio_id, Convenio.order(:nome).where(empresa_id: current_usuario.empresa_id), :id, :nome, {include_blank: "Selecione"}, {:class=>'form-control'})
          = select(:cliente_convenio, :convenio_id, Convenio.where(empresa_id: current_usuario.empresa_id).order(:nome).collect {|p| ["#{p.nome}", "#{p.id}"] }, {include_blank: "Selecione"}, class: "form-control")
      %div{class: "row", style: "margin-top: 10px; margin-bottom: 10px;"}
        %div{class: "col-xs-12 col-sm-6 col-md-4 col-lg-4"}
          %label{class: "string control-label"}
            Validade Carteira
          %input{:type=>"text", :class => "form-control datepicker_form", :id => "cliente_convenio_validade_carteira"}
        %div{class: "col-xs-12 col-sm-6 col-md-4 col-lg-4"}
          %label{class: "string control-label"}
            Produto
          %input{:type=>"text", :class => "form-control", :id => "cliente_convenio_produto"}
        %div{class: "col-xs-12 col-sm-6 col-md-4 col-lg-4"}
          %label{class: "string control-label"}
            Titular
          %input{:type=>"text", :class => "form-control", :id => "cliente_convenio_titular"}
      %div{class: "row"}
        %div{class: "col-xs-12 col-sm-6 col-md-4 col-lg-4"}
          %label{class: "string control-label"}
            Plano
          %input{:type=>"text", :class => "form-control", :id => "cliente_convenio_plano"}
        %div{class: "col-xs-1 col-sm-1 col-md-1 col-lg-1", style: "margin-top: 20px;"}
          =link_to "#{image_tag("icons/glyphicons-191-circle-plus-white.png", width: 22, height: 22)}".html_safe, "#", {id: "adicionar_convenio_em_cliente", class: "btn btn-primary", title: "Adicionar Convênio", remote: true}
    %div{class: "col-xs-12 col-sm-10 col-md-6 col-lg-6"}
      %div{class: "panel panel-default"}
        %div{class: "panel-heading"}
          = "Convênio(s) Associado(s) ao Cliente"
        %div{class: "panel-body"}
          %table{class: "table table-striped table-bordered table-hover table-responsive"}
            %thead
              %th Convênio
              %th Excluir
            %tbody#tabela_cliente_convenios
              - if @cliente.cliente_convenios.present?
                - @cliente.cliente_convenios.each do |c|
                  %tr
                    %td
                      = c.convenio.nome
                    %td
                      %center
                        = link_to "#{image_tag("icons/glyphicons-17-bin.png", width: 20, height: 27)}".html_safe, destroy_cliente_convenio_path, data: {cliente_convenio_id: c.id, cliente_id: @cliente.id}, class: "delete_cliente_convenio"