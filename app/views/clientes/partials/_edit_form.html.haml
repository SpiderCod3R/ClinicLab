= simple_form_for([current_user.empresa, @cliente], url: empresa_clientes_registro_path, method: "PUT") do |f|
  =render 'application/form/error_messages', target: @cliente
  =f.input :empresa_name, as: :hidden, input_html: { value: current_user.empresa.slug }
  %ul{class: "nav nav-tabs"}
    %li{class:"active"}
      %a{'data-toggle':"tab", href:"#dados", id: "aba_dados"} Dados Pessoais
    %li
      %a{'data-toggle':"tab", href:"#contato", id: "aba_contato"} Contato
    %li
      %a{'data-toggle':"tab", href:"#convenio", id: "aba_convenio"} ConvÃªnio
    =render 'clientes/partials/permissions/user_tabs'
    =render 'clientes/partials/permissions/admin_tabs'

  %div{class: "container-fluid", style: "padding-top: 7px; padding-bottom: 25px;"}
    %div{class:"tab-content"}
      / aba dados_pessoais
      =render 'clientes/partials/abas/dados_pessoais_edit', { f: f }

      / aba convenio
      =render 'clientes/partials/abas/convenio', { f: f }

      / aba contato
      =render 'clientes/partials/abas/contato', { f: f }

      /Permissoes de Usuario e Admin do Cliente
      =render 'clientes/partials/permissions/user' , { f: f }
      =render 'clientes/partials/permissions/admin', { f: f }