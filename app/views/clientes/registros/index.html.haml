=build_form_toolbar(new_empresa_clientes_registro_path(current_user.empresa),nil, @clientes, empresa_clientes_registros_path(current_user.empresa), nil)
.container-fluid
  %header
    %br
    %br
    %br
    %h1 Clientes
    .page-header
    %br
    .well
      .row
        .col-xs-6.col-sm-6.col-md-12.col-lg-12
          = search_form_for @search, url: empresa_clientes_registros_path(current_user.empresa) do |f|
            = f.condition_fields do |c|
              = render "condition_fields", f: c
            = link_to_add_fields "Adicionar Condições", f, :condition
            %div{class: "actions", style: "margin-top: 2%;"}
              = f.submit "Pesquisar", class: "btn btn-primary"
  .table-responsive{style:"overflow-x:auto;"}
    %table.table.table-striped.table-bordered.table-condensed
      %thead
        %th=t('clientes.helpers.status')
        %th=t('clientes.helpers.codigo')
        %th=t('clientes.helpers.nome')
        %th=t('clientes.helpers.cpf')
        %th=t('clientes.helpers.endereço')
        %th=t('clientes.helpers.complemento')
        %th=t('clientes.helpers.bairro')
        %th
          %center
            = t('bootstrap.helpers.actions')
      %tbody#clientes_content
        - @clientes.each do |cliente|
          %tr
            %td= status(cliente.status)
            %td= cliente.id
            %td= cliente.nome
            %td= CPF.new(cliente.cpf).formatted
            %td= cliente.endereco
            %td= cliente.complemento
            %td= cliente.bairro
            %td
              .btn-group.pull-right
                -if can? :read, Cliente
                  = link_to "#{image_tag("icons/glyphicons-610-journal.png", width: 22, height: 22)}".html_safe,
                    empresa_clientes_registro_path(current_user.empresa, cliente), title: t(:show, scope: [:bootstrap, :helpers, :links]), class: 'btn btn-default'
  #paginator_index_cliente.pull-right
    = paginate @clientes
