=build_form_toolbar(new_paciente_path,nil, @paciente, pacientes_path, nil)
%div{class: "container"}
  %div{class: "row"}
    %h1 Pacientes
    %hr{style: "border: #323232 solid 0.5px;"}
    %table{class: "table table-striped table-bordered", cellspacing: "0", width: "100%"}
      %thead
        %th="ID"
        %th= t('pacientes.helpers.name')
        %th= t('pacientes.helpers.rg')
        %th= t('pacientes.helpers.cpf')
        %th= t('pacientes.helpers.birth_day')
        %th= t('pacientes.helpers.telephone')
        %th=t('bootstrap.helpers.actions')
      %tbody
        - @pacientes.each do |paciente|
          %tr
            %td= paciente.id
            %td= paciente.nome
            %td= paciente.rg
            %td= paciente.cpf
            %td= l paciente.data_nascimento
            %td= paciente.telefone
            %td
              .btn-group.pull-right
                -if can? :read, Paciente
                  = link_to_visualizar paciente
  %div{class: "row"}
    %hr{style: "border: #323232 solid 0.5px;"}
