%div{class: "container", style: "margin-left: 5%; padding-top: 15px; padding-bottom: 15px;"}
  = simple_form_for([current_user.empresa, @servico]) do |f|
    %div{class: "row"}
      %div{class: "col-xs-12 col-sm-6 col-md-6 col-lg-6", style: 'margin: 0; padding: 0;'}
        = f.error_notification
    %div{class: "row"}
      %div{class: "col-xs-6 col-sm-4 col-md-4 col-lg-4"}
        = f.input :tipo
    %div{class: "row"}
      %div{class: "col-xs-6 col-sm-4 col-md-3 col-lg-3"}
        = f.input :abreviatura
    %div{class: "row"}
      %div{class: "col-xs-6 col-sm-4 col-md-3 col-lg-3"}
        = f.input :valor, as: :string, input_html: {class: "money_money_money"}