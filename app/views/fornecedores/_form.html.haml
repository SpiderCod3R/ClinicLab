= simple_form_for(@fornecedor) do |f|
  %div{class: "container", style: "margin-left: 5%; padding-top: 15px; padding-bottom: 15px;"}
    %div{class:"tab-content"}
      //Aba profissionais
      %div{id:"dados", class:"tab-pane fade in active"}
        %div{class: "col-xs-4 col-sm-4 col-md-4 col-lg-4", style: 'margin: 0; padding: 0;'}
          %div{class: "row"}
            %div{class: "col-xs-9 col-sm-9 col-md-9 col-lg-9", style: 'margin: 0; padding: 0;'}
              = f.error_notification
          %div{class: "row"}
            %div{class: "col-xs-9 col-sm-9 col-md-9 col-lg-9"}
              = f.input :status, :as => :select,
                    :collection => [['Ativo',true],['Inativo',false]],
                    :include_blank => false,
                    :label => t('labels.status')
          %div{class: "row"}
            %div{class: "col-xs-9 col-sm-9 col-md-9 col-lg-9"}
              = f.input :nome
          %div{class: "row"}
            %div{class: "col-xs-9 col-sm-9 col-md-9 col-lg-9"}
              = f.input :documento, :as => :select,
                    :label => "Documento",
                    :collection => [['Selecione',0],['Física',1],['Jurídica',2]],
                    :include_blank => false,
                    label:"Tipo Pessoa"
          %div{class: "row"}
            %div{class: "col-xs-9 col-sm-9 col-md-9 col-lg-9"}
              = f.input :cpf, input_html: {class: "cpf_maskara" }
          %div{class: "row"}
            %div{class: "col-xs-9 col-sm-9 col-md-9 col-lg-9"}
              = f.input :cnpj, input_html: {class: "cnpj_maskara" }
        %div{class: "col-xs-12 col-sm-4 col-md-4 col-lg-4", style: 'margin: 0; padding: 0;'}
          %div{class: "row"}
            %div{class: "col-xs-9 col-sm-9 col-md-9 col-lg-9"}
              = f.input :email
          %div{class: "row"}
            %div{class: "col-xs-9 col-sm-9 col-md-9 col-lg-9"}
              = f.input :telefone, input_html: {class: "telefone_maskara" }
          %div{class: "row"}
            %div{class: "col-xs-9 col-sm-9 col-md-9 col-lg-9"}
              = f.input :celular, input_html: {class: "celular_maskara" }
      //Aba endereco
      %div{id:"endereco", class:"tab-pane fade"}
        %div{class: "row"}
          %div{class: "col-xs-12 col-sm-4 col-md-4 col-lg-3"}
            = f.input :endereco
        %div{class: "row"}
          %div{class: "col-xs-12 col-sm-4 col-md-4 col-lg-3"}
            = f.input :complemento
        %div{class: "row"}
          %div{class: "col-xs-12 col-sm-4 col-md-4 col-lg-3"}
            = f.input :bairro
        %div{class: "row", style: "margin-bottom: 10px;"}
          %div{class: "col-xs-12 col-sm-4 col-md-4 col-lg-3"}
            =f.label "Estado"
            =f.collection_select(:estado_id, @estados, :id, :nome, {include_blank: "Selecione"}, {:class=>'form-control'})
        %div{class: "row", style: "margin-bottom: 10px;"}
          %div{class: "col-xs-12 col-sm-4 col-md-4 col-lg-3"}
            =f.label "Cidade"
            = f.grouped_collection_select(:cidade_id, @estados, :cidades, :nome, :id, :nome, {include_blank: "Selecione"}, { :class=> "collection_select" })
