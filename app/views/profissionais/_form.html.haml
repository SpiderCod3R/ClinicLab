= simple_form_for([@empresa, @profissional]) do |f|
  .container{style: "padding-top: 15px; padding-bottom: 15px;"}
    .tab-content
      //Aba profissionais
      #dados.tab-pane.fade.in.active
        .row
          .col-xs-9.col-sm-9.col-md-9.col-lg-9
            = f.error_notification
        =render 'dados_pessoais', {f: f}

      //Aba endereco
      #endereco.tab-pane.fade
        =render 'endereco', {f: f}