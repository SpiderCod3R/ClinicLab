- if @cargos.nil?
  -@cargos = Array.new
- if @operadoras.nil?
  -@operadoras = Array.new

= simple_form_for([@empresa, @profissional]) do |f|
  .container-fluid{style: "padding-top: 15px; padding-bottom: 15px;"}
    .row
      .col-xs-12.col-sm-12.col-md-12.col-lg-12
        = f.error_notification
    .panel
      %ul.nav.nav-tabs
        %li.active
          %a{'data-toggle':"tab", href:"#dados"}
            Dados profissionais
        %li
          %a{'data-toggle':"tab", href:"#endereco"}
            Endere√ßo
      .tab-content
        //Aba profissionais
        #dados.tab-pane.fade.in.active
          =render 'dados_pessoais', {f: f}

        //Aba endereco
        #endereco.tab-pane.fade
          =render 'endereco', {f: f}