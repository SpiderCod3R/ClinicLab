=build_object_viewer_toolbar(edit_profissional_path(@profissional), @profissional, profissionais_path, nil)
%section{id: "show_convenio"}
  %div{class: "container"}
    %div{class: "row"}
      %div{class: "col-xs-12 col-sm-12 col-md-12 col-lg-12"}
        %div{class: "row-fluid"}
          %h2 Exibindo profissional
          %hr{style: "border: #323232 solid 0.5px;"}
        %div{class: "col-xs-8 col-sm-8 col-md-8 col-lg-8"}
          %div{class: "row-fluid"}
            %div{class: "col-xs-4 col-sm-4 col-md-4 col-lg-4"}
              %strong Código:
              = @profissional.id
          %div{class: "row-fluid"}
            %div{class: "col-xs-6 col-sm-6 col-md-6 col-lg-6"}
              %strong Status:
              =ativo_ou_inativo?(@profissional.status)
          %div{class: "row-fluid"}
            %div{class: "col-xs-6 col-sm-6 col-md-6 col-lg-6"}
              %strong Nome:
              = @profissional.nome
          %div{class: "row-fluid"}
            %div{class: "col-xs-6 col-sm-6 col-md-6 col-lg-6"}
              %strong Cargo:
              = @profissional.cargo
          %div{class: "row-fluid"}
            %div{class: "col-xs-6 col-sm-6 col-md-6 col-lg-6"}
              %strong Data de nascimento:
              = @profissional.data_nascimento
          %div{class: "row-fluid"}
            %div{class: "col-xs-6 col-sm-6 col-md-6 col-lg-6"}
              %strong CPF:
              = @profissional.cpf
          %div{class: "row-fluid"}
            %div{class: "col-xs-6 col-sm-6 col-md-6 col-lg-6"}
              %strong RG:
              = @profissional.rg
          %div{class: "row-fluid"}
            %div{class: "col-xs-6 col-sm-6 col-md-6 col-lg-6"}
              %strong Telefone:
              = @profissional.telefone
          %div{class: "row-fluid"}
            %div{class: "col-xs-6 col-sm-6 col-md-6 col-lg-6"}
              %strong Celular:
              = @profissional.celular
          %div{class: "row-fluid"}
            %div{class: "col-xs-6 col-sm-6 col-md-6 col-lg-6"}
              %strong Operadora:
              = @profissional.operadora.nome
          %div{class: "row-fluid"}
            %div{class: "col-xs-6 col-sm-6 col-md-6 col-lg-6"}
              %strong Conselho regional:
              = @profissional.conselho_regional.sigla
          %div{class: "row-fluid"}
            %div{class: "col-xs-6 col-sm-6 col-md-6 col-lg-6"}
              %strong Endereço:
              = @profissional.endereco
          %div{class: "row-fluid"}
            %div{class: "col-xs-6 col-sm-6 col-md-6 col-lg-6"}
              %strong Complemento:
              = @profissional.complemento
          %div{class: "row-fluid"}
            %div{class: "col-xs-6 col-sm-6 col-md-6 col-lg-6"}
              %strong Bairro:
              = @profissional.bairro
          %div{class: "row-fluid"}
            %div{class: "col-xs-6 col-sm-6 col-md-6 col-lg-6"}
              %strong Estado:
              = @profissional.estado.nome
          %div{class: "row-fluid"}
            %div{class: "col-xs-6 col-sm-6 col-md-6 col-lg-6"}
              %strong Cidade:
              = @profissional.cidade.nome

        %div{class: "col-xs-4 col-sm-4 col-md-4 col-lg-4"}
          -if @profissional.imagem.present?
            = image_tag @profissional.imagem.url(:medium), :class => "img_profissional"
          / img-responsive img-circle
      %div{class: "row-fluid"}
        %hr{style: "border: #323232 solid 0.5px;"}
