=build_form_toolbar(new_imagem_cabec_path, nil, @imagem_cabecs, imagem_cabecs_path, nil)
%div{class: "container-fluid"}
  %div{class: "row-fluid"}
    %h1  Imagens Cabec
    %hr{style: "border: #323232 solid 0.5px;"}
    %div{class: "row", style: "margin: 0;"}
      %div{class: "jumbotron"}
        %div{class: "row", style: "margin: 0;"}
          %div{class: "col-md-12 col-sm-12 col-xs-12 col-lg-12"}
            = search_form_for @search do |f|
              = f.condition_fields do |c|
                = render "condition_fields", f: c
              = link_to_add_fields "Adicionar Condições", f, :condition
              %div{class: "actions", style: "margin-top: 2%;"}
                = f.submit "Pesquisar", class: "btn btn-primary"
                = link_to "Recarregar", imagem_cabecs_path, class: "btn btn-default"
  %div{class: "row-fluid"}
    %table{class: "table table-striped table-bordered", cellspacing: "0", width: "100%"}
      %thead
        %th=t(:código, scope: [:bootstrap, :helpers, :labels])
        %th=t(:nome, scope: [:bootstrap, :helpers, :labels])
        %th{class: "pull-right"}=t(:edit, scope: [:bootstrap, :helpers, :links])
      %tbody
        - @imagem_cabecs.each do |imagem|
          %tr
            %td=imagem.id
            %td 
              = link_to "#{imagem.nome}","#{imagem.imagem}", target: "blank"
            %td{class: "pull-right"}
              = link_to "Editar", edit_empresa_imagem_cabec_path(current_user.empresa, imagem)
  %div{class: "row", style: "margin: 0;"}
    %div{class: "pull-right"}
      =paginate @imagem_cabecs
  %hr{style: "border: #323232 solid 0.5px;"}
