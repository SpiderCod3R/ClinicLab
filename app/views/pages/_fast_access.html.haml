#accordion.panel-group
  .panel.panel-default
    .panel-heading
      %h4.panel-title
        %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapseFastAccess"}
          %span
            %i.fa.fa-2x.fa-archive
          Acesso Rápido
    #collapseFastAccess.panel-collapse.collapse.in
      .panel-body
        %table.table
          %tr
            %td
              %span
                %i.fa.fa-2x.fa-heartbeat
              = link_to "Pacientes", new_cliente_path, title: "Acesso Rápido à Paciente"
          %tr
            %td
              %span
                %i.fa.fa-2x.fa-user-md
              = link_to "Profissionais", new_profissional_path , title: "Acesso Rápido à Profissionais"
          %tr
            %td
              %span
                %i.fa.fa-2x.fa-contao
              = link_to "Convênios", new_convenio_path, title: "Acesso Rápido à Convênio"
          %tr
            %td
              %span
                %i.fa.fa-2x.fa-calendar
              = link_to "Agenda", "#", title: "Acesso Rápido à Agenda"
  .panel.panel-default
    .panel-heading
      %h4.panel-title
        %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapseAdminAccess"}
          %span
            %i.fa.fa-2x.fa-tachometer
          Acesso Administrativo
    #collapseAdminAccess.panel-collapse.collapse
      .panel-body
        %table.table
          %tr
            %td
              %span
                %i.fa.fa-2x.fa-building
              %a{:href => "http://www.jquery2dotnet.com"} Empresa
          %tr
            %td
              %span
                %i.fa.fa-2x.fa-users
              %a{:href => "http://www.jquery2dotnet.com"} Contas
          %tr
            %td
              =link_to "#", :"data-toggle"=> "modal", :"data-target"=>"#empresa_permissoes_modal" do
                %span.text-info
                  %i.fa.fa-2x.fa-cogs
                  Permissões
  .panel.panel-default
    .panel-heading
      %h4.panel-title
        %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapseProfile"}
          %span
            %i.fa.fa-2x.fa-user
          Perfil
    #collapseProfile.panel-collapse.collapse
      .panel-body
        %table.table
          %tr
            %td
              %span
                %i.fa.fa-key
              %a{:href => "http://www.jquery2dotnet.com"} Alterar Senha
          %tr
            %td
              %span
                %i.fa.fa-pencil-square-o
              %a{:href => "http://www.jquery2dotnet.com"} Alterar Dados
          %tr
            %td
              = link_to destroy_usuario_session_path, method: 'delete', title: "SAIR" do
                %span.text-danger
                  %i.fa.fa-sign-out
                  Sair/Deslogar

#empresa_permissoes_modal.modal.fade{ :"aria-hidden"=> "true", :"aria-labelledby"=> "myModalLabel", role: "dialog", tabindex: "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{ :"aria-label" =>"Close", :"data-dismiss"=>"modal", type: "button"}
          %span{:"aria-hidden"=>"true"} ×
        %h4#myModalLabel.modal-title
          %center="Permissoes da Empresa #{current_usuario.empresa.nome}"
      .modal-body
        %fieldset{style: "border: #BBC0C3 1px solid;"}
          %br/
          %ol
            .container-fluid
              .col-md-12
                -current_usuario.empresa.empresa_permissoes.select(:permissao_id).each do |f|
                  .row-fluid
                    %center
                      %li{style: "color: #524EFF;"}=f.permissao.nome
                      %br/
                      %hr{style: "border: #C7C4FF 0.5px dashed;"}
      .modal-footer
        %button#permissao_formclose.btn.btn-default{:"data-dismiss"=> "modal", type: "button"} Fechar