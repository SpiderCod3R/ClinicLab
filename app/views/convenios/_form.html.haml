.container
  =simple_form_for([current_user.empresa, @convenio]) do |f|
    .row
      .col-xs-12.col-sm-6.col-md-6.col-lg-6{style: 'margin: 0; padding: 0;'}
        = f.error_notification
    .row
      .col-xs-5.col-sm-3.col-md-3.col-lg-3
        = f.input :status, as: :select, collection: [['Ativo',true],['Inativo',false]], :include_blank => false, label: t('labels.status')
      .col-xs-12.col-sm-4.col-md-4.col-lg-3=f.input :nome
      .col-xs-5.col-sm-3.col-md-3.col-lg-3=f.input :valor, as: :string, input_html: {class: "money_money_money"}
