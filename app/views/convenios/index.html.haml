=build_form_toolbar(new_convenio_path,nil, @convenio, convenios_path, nil)
%div{class: "container-fluid"}
  %div{class: "row-fluid"}
    %div{class: "page-header"}
      %h1 Convênios
      %hr{style: "border: #323232 solid 0.5px;"}
      %table{class: "table table-striped table-bordered"}
        %thead
          %th=t(:status, scope: [:bootstrap, :helpers, :labels])
          %th=t(:código, scope: [:bootstrap, :helpers, :labels])
          %th=t(:nome, scope: [:bootstrap, :helpers, :labels])
          %th=t(:value, scope: [:bootstrap, :helpers, :labels])
          %th.pull-right=t(:show, scope: [:bootstrap, :helpers, :links])
        %tbody
          - @convenios.each do |convenio|
            %tr
              %td=status(convenio.status)
              %td=convenio.id
              %td=convenio.nome
              %td=convenio.valor
              %td.pull-right
                -if can? :read, Convenio
                  = link_to_visualizar convenio
  %div{class: "row"}
    %hr{style: "border: #323232 solid 0.5px;"}
