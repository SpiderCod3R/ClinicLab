%div{class: "container", style: "margin-left: 5%; padding-top: 15px; padding-bottom: 15px;"}
  = simple_form_for([current_user.empresa, @cabec]) do |f|
    %div{class: "row"}
      %div{class: "col-xs-12 col-sm-6 col-md-6 col-lg-6", style: 'margin: 0; padding: 0;'}
        = f.error_notification
    %div{class: "row"}
      %div{class: "col-xs-5 col-sm-3 col-md-3 col-lg-3"}
        = f.input :status, :as => :select, :collection => [['Ativo',true],['Inativo',false]],            :include_blank => false, :label => t('labels.status')
    %div{class: "row"}
      %div{class: "col-xs-12 col-sm-6 col-md-4 col-lg-3"}
        = f.input :nome
    %div{class: "row"}
      %div{class: "col-xs-11 col-sm-11 col-md-11 col-lg-11"}
        = cktext_area :cabec, :texto, cols: 40, ckeditor: { uiColor: '#E2E2E2', toolbar: 'mini', height: 400 }, :id => "cabec_textarea", style: "height: 700px"

= javascript_include_tag Ckeditor.asset_path
