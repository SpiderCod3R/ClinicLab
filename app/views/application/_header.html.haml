%div{class: "header"}
  %nav.navbar.navbar-custom.navbar-fixed-top
    %div{class: "logo-nav-left animated wow zoomIn", "data-wow-delay" => ".10s", style:"padding-left: 50px; padding-top: 12px;"}
      %h4=link_to "GClinicWeb", root_path
    %div{class: "navbar-header nav_2"}
      %button.navbar-toggle.collapsed.navbar-toggle1{"data-target" => "#bs-megadropdown-tabs", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
    #bs-megadropdown-tabs.collapse.navbar-collapse
      - if gsuper?
        %ul{class: "nav navbar-nav", style: "padding-left: 15px;"}
          -if current_page?(empresas_path)
            %li.active= link_to "HOME", root_path
          -else
            %li.active= link_to "CONTAS", empresas_path
      - if administrador? || funcionario?
        %ul.nav.navbar-nav
          =render 'application/megamenu'
      -if usuario_signed_in?
        %div{style: "padding-right: 80px;"}
          %ul.nav.navbar-nav.navbar-right
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                =current_usuario.nome
                %b.caret
              %ul.dropdown-menu.multi-column.columns-3
                .row
                  .col-sm-5
                    %ul.multi-column-dropdown
                      %h6 PÃ¡ginas
                      %li
                        =link_to "Home", root_path
                      %li
                        =link_to "Contas", empresas_path
                  .col-sm-5
                    %ul.multi-column-dropdown
                      %h6 Perfil
                      =render 'application/usuario_logado'
                  .clearfix
      -unless usuario_signed_in?
        %ul.nav.navbar-nav.navbar-right
          %div{style: "padding-right: 50px; padding-top: 5px;"}
            -unless request_url_login_screen("login?") or request_url_login_screen("sign_in")
              =render 'devise/sessions/loginpage'
          .clearfix
.clearfix
