%div{class: "header"}
  %nav.navbar.navbar-custom.navbar-fixed-top
    %div{class: "" }
      %div{class: "logo-nav-left animated wow zoomIn", "data-wow-delay" => ".10s", style:"padding-left: 50px;"}
        %h4=link_to "GClinicWeb", "#"
      %div{class: "logo-nav-left1"}
    %div{class: "navbar-header nav_2"}
      %button.navbar-toggle.collapsed.navbar-toggle1{"data-target" => "#bs-megadropdown-tabs", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
    #bs-megadropdown-tabs.collapse.navbar-collapse
      %ul{class: "nav navbar-nav", style: "padding-left: 15px;"}
        -if can? :edit, object.class
          %li.active= link_to "#{image_tag("icons/glyphicons-151-edit-white.png", width: 22, height: 22)} EDITAR".html_safe, edit_path
        -else
          -if current_usuario.admin?
            %li.active= link_to "#{image_tag("icons/glyphicons-151-edit-white.png", width: 22, height: 22)} EDITAR EMPRESA".html_safe, edit_path
        -unless object.id.nil?
          -if can? :destroy, object.class
            %li.active= link_to "#{image_tag("icons/glyphicons-193-circle-remove-white.png", width: 22, height: 22)} EXCLUIR".html_safe, {action: 'destroy', id: object }, method: "delete", class: 'delete-confirm', data: {confirm: "Excluir #{object.to_s}"}, title: "Excluir Empresa"
        -else
          %li.disabled= link_to "#{image_tag("icons/glyphicons-193-circle-remove-white.png", width: 22, height: 22)} EXCLUIR".html_safe, "#"
        %li.active= link_to "#{image_tag("icons/glyphicons-28-search-white.png", width: 22, height: 22)} PROCURAR".html_safe, back_path
        -if report_path.nil?
          -unless current_usuario.super?
            %li.disabled= link_to "#{image_tag("icons/glyphicons-16-print-white.png", width: 22, height: 22)} IMPRIMIR".html_safe, "#"
        -else
          -if can? :read, object.class
            %li.active= link_to "#{image_tag("icons/glyphicons-16-print-white.png", width: 22, height: 22)} IMPRIMIR".html_safe, report_path
        %li.active= link_to "#{image_tag("icons/glyphicons-389-exit-white.png", width: 22, height: 22)} SAIR".html_safe, root_path
      -if usuario_signed_in?
        %div{style: "padding-right: 80px;"}
          %ul.nav.navbar-nav.navbar-right
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                =current_usuario.nome
                %b.caret
              %ul.dropdown-menu.multi-column.columns-3
                .row
                  .col-sm-5
                    %ul.multi-column-dropdown
                      %h6 PÃ¡ginas
                      %li
                        =link_to "Home", root_path
                      %li
                        =link_to "Contas", empresas_path
                  .col-sm-5
                    %ul.multi-column-dropdown
                      %h6 Perfil
                      =render 'application/usuario_logado'
                  .clearfix
.clearfix
